@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="header-wrapper" style="background: url('/Content/Images/background3.jpg')">
    <div class="container header-centre">
        <div class="header-titles">
            <h1>Search system</h1>
            <p>Search system helps to find exactly what you wanted </p>
        </div>
    </div>
    <div class="container header-centre">
        <div class="header-sidebar">
            <form action="/Home/Find" method="post"  onsubmit="return validate()">
                <div class="input-group">
                    <input id="search" name="search" type="text" class="form-control" autocomplete="off" />
                    <span class="input-group-btn">
                        <input type="submit" value="Search" class="btn" />
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>



