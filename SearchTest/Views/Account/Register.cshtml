@model SearchTest.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="before-wrapper">


    <div class="container ">
        <div class="header-titles">
            Register
        </div>
    </div>
</div>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="before-wrapper-main">
        <div class="container col-xs-12">
            <div class="header-sub-title">
            
                    <h5>Passwords must have at least : one lowercase ('a'-'z'), one uppercase ('A'-'Z'), one digit ('0'-'9'), one non letter or digit character and be at least 6 characters long. </h5>
               
            </div>
        </div>
        <div class="col-xs-12 container">
        

            <div class="form-group">
                @Html.ValidationSummary()
                @Html.LabelFor(m => m.Email, new { @class = "col-xs-12 col-sm-2 control-label" })
                <div class="col-sm-4 col-xs-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "example@mail.com" })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-xs-12 col-sm-2  control-label" })
                <div class="col-sm-4 col-xs-8">
                    <input class="form-control" data-val="true" data-val-length="The Password must be at least 6 characters long."
                           data-val-length-max="100" data-val-length-min="6" data-val-required="Требуется поле Password." id="Password"
                           name="Password" type="password" placeholder="Aaaa_1" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-12 col-sm-2  control-label" })
                <div class="col-sm-4 col-xs-8">
                    <input class="form-control" data-val="true" data-val-equalto="The password and confirmation password do not match."
                           data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" type="password" placeholder="Aaaa_1" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4 col-xs-8">
                    <input type="submit" class="btn" value="Register" />
                </div>
            </div>
        </div>

    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
